{% extends "template-page.html.twig" %}

{% block main %}


	{% block blog %}
    {# Blog Section #}
    <section id="blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>{{blog.name}}</h2>
                    <hr class="star-light">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-10 col-lg-offset-2">
                    <p><strong>{{blog.intro|raw}}</strong></p>
                </div>
				{% for post in posts %}
					<div class="row">
						<div class="col-lg-4">
							<a href="index.php?post={{post.id}}"><img src="{{post.photo}}" class="img-responsive" alt="" style="max-height:250px; max-width:300px;"></a>
						</div>
						<div class="col-lg-8">
							<a href="index.php?post={{post.id}}" style="color:black"><h3>{{post.title}}</h3></a>
							<a href="index.php?post={{post.id}}"><p>{{post.preview}}</p></a>
						</div>
					</div>
					<div class="col-lg-12"><p></p></div>
				{% endfor %}
            </div>
        </div>
    </section>
	{% endblock %}

{% endblock %}
