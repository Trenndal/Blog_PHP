<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    {% block title %}<title>{{title}}</title>{% endblock %}

    {# Bootstrap Core CSS #}
    <link href="vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	
    {# Style CSS #}
    <link href="css/style.css" rel="stylesheet">

    {# Theme CSS #}
    <link href="css/freelancer.min.css" rel="stylesheet">

    {# Custom Fonts #}
    <link href="vendor/components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    {# HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries #}
    {# WARNING: Respond.js doesn't work if you view the page via file:// #}
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" class="index">

    {# Navigation #}
	{% block navigation %}
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            {# Brand and toggle get grouped for better mobile display #}
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> {{nav.menu}} <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="index.php#page-top">{{nav.title}}</a>
            </div>

            {# Collect the nav links, forms, and other content for toggling #}
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="index.php#page-top"></a>
                    </li>
					{% for link in nav.links %}
                    <li class="page-scroll">
                        <a href="{{link.href}}">{{link.name}}</a>
                    </li>
					{% endfor %}
                </ul>
            </div>
            {# /.navbar-collapse #}
        </div>
        {# /.container-fluid #}
    </nav>
	{% endblock %}

	{% block head %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-circle" src="{{picture}}" alt="" style="max-height:300px">
                    <div class="intro-text">
                        <span class="name">{{title is defined ? title : page is defined ? page.title : 'Blog'}}</span>
                        <hr class="star-light">
                        <span class="skills">{{subtitle}}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
	{% endblock %}


	{% block main %}
    {# Content of the page #}

	
	{% endblock %}

	{% block footer %}
    {# Footer #}
    <footer class="text-center" id="footer">
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; Your Website 2016
                    </div>
                </div>
            </div>
        </div>
    </footer>
	{% endblock %}

	{% block topbutton %}
    {# Scroll to Top Button (Only visible on small and extra-small screen sizes) #}
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
	{% endblock %}


    {# jQuery #}
    <script src="vendor/twbs/bootstrap/docs/assets/js/vendor/jquery.min.js"></script>

    {# Bootstrap Core JavaScript #}
    <script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>

    {# Plugin JavaScript #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    {# Contact Form JavaScript #}
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    {# Theme JavaScript #}
    <script src="js/freelancer.min.js"></script>

</body>

</html>
