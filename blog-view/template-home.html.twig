	{% block footer %}
    {# Footer #}
    <footer class="text-center" id="contact">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>{{footer.location}}</h3>
                        <p>{{footer.adresse1}}
                            <br>{{footer.adresse2}}</p>
                        <h3><br/>{{footer.phonename}}</h3>
                        <p>{{footer.phone}}</p>
                        <h3><br/><br/>{{footer.socials}}</h3>
                        <ul class="list-inline">
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-dribbble"></i></a>
                            </li>
                        </ul>
                    </div>
					<div class="container">
						<div class="row">
							<div class="col-lg-8 text-center">
								<h2>{{footer.contactname}}</h2>
							</div>
							<div class="col-lg-6 col-xs-10 col-lg-offset-1 col-xs-offset-1">
								<form name="sentMessage" id="contactForm" action="index.php" method="POST">
								<p style="color:red;">{{mail.replie}}</p>
									<div class="row control-group">
										<div class="form-group col-xs-12 floating-label-form-group controls">
											<label>{{mail.name|default('Name')}}</label>
											<input type="text" class="form-control" placeholder="{{mail.replie is defined ? (mail.value.name is defined ? mail.value.name : mail.err_name|default('Please enter your name.') ) : mail.name|default('Name')}}" name="name" required >
											<p class="help-block text-danger"></p>
										</div>
									</div>
									<div class="row control-group">
										<div class="form-group col-xs-12 floating-label-form-group controls">
											<label>{{mail.email|default('Email Address')}}</label>
											<input type="email" class="form-control" placeholder="{{mail.replie is defined ? (mail.value.email is defined ? mail.value.email : mail.err_email|default('Please enter your email address.') ) : mail.email|default('Email Address')}}" name="email" required >
											<p class="help-block text-danger"></p>
										</div>
									</div>
									<div class="row control-group">
										<div class="form-group col-xs-12 floating-label-form-group controls">
											<label>{{mail.phone|default('Phone Number')}}</label>
											<input type="tel" class="form-control" placeholder="{{mail.replie is defined ? (mail.value.phone is defined ? mail.value.phone : mail.phone|default('Phone Number')) : mail.phone|default('Phone Number')}}" name="phone" >
											<p class="help-block text-danger"></p>
										</div>
									</div>
									<div class="row control-group">
										<div class="form-group col-xs-12 floating-label-form-group controls">
											<label>{{mail.message|default('Message')}}</label>
											<textarea rows="3" class="form-control" placeholder="{{mail.replie is defined ? (mail.value.message is defined ? mail.value.message : mail.err_message|default('Please enter a message.') ) : mail.message|default('Message')}}" name="message" required ></textarea>
											<p class="help-block text-danger"></p>
										</div>
									</div>
									<br>
									<div id="success"></div>
									<div class="row">
										<div class="form-group col-xs-12">
											<button type="submit" class="btn btn-success btn-lg">{{mail.send|default('Send')}}</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; Your Website 2016
                    </div>
                </div>
            </div>
        </div>
    </footer>
	{% endblock %}